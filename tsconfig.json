{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./app/src",
    "module": "commonjs",
    "esModuleInterop": true,
    "typeRoots": ["app/src/types"],
    "paths": {
      "@configs": ["configs/index"],
      "@utils": ["utils/index"],
      "@exceptions": ["exceptions/index"],
      "@middleware": ["middleware/index"],
      "@interfaces": ["interfaces/index"],
      "@constants": ["constants/index"],
      "@users": ["users/index"],
      "@apartments": ["apartments/index"],
      "@units": ["units/index"],
      "@apartmentExpenses": ["apartmentExpenses/index"],
      "@expenseTypes": ["expenseTypes/index"]
    }
  },
  "include": [
    "./app/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
